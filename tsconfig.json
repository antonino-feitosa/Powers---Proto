{
    "compilerOptions": {
      "module": "Node16",
      "outDir": "./dist/",
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "rootDir": "./src",
      
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noImplicitOverride": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "strictNullChecks": true
    },
    "include": ["./src/**/*"]
  }
  